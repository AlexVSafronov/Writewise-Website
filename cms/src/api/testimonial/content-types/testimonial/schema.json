{
  "kind": "collectionType",
  "collectionName": "testimonials",
  "info": {
    "singularName": "testimonial",
    "pluralName": "testimonials",
    "displayName": "Testimonial",
    "description": "User testimonials for the WriteWise website"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "role": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "company": {
      "type": "string",
      "maxLength": 100
    },
    "content": {
      "type": "text",
      "required": true,
      "maxLength": 1000
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "rating": {
      "type": "integer",
      "required": true,
      "min": 1,
      "max": 5
    },
    "featured": {
      "type": "boolean",
      "default": false
    }
  }
}
