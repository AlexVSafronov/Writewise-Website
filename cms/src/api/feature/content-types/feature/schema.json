      "type": "text",
      "required": true,
      "maxLength": 500
    },
    "icon": {
      "type": "enumeration",
      "enum": [
        "PenTool",
        "MessageSquare",
        "Brain",
        "Target",
        "Sparkles",
        "Award",
        "BookOpen",
        "Users",
        "Zap"
      ],
      "required": true
    },
    "order": {
      "type": "integer",
      "required": true,
      "min": 1
    }
  }
}
