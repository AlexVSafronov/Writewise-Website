{
  "kind": "collectionType",
  "collectionName": "faqs",
  "info": {
    "singularName": "faq",
    "pluralName": "faqs",
    "displayName": "FAQ",
    "description": "Frequently Asked Questions for the website"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "question": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "answer": {
      "type": "text",
      "required": true,
      "maxLength": 1000
    },
    "category": {
      "type": "enumeration",
      "enum": ["General", "Pricing", "Technical", "Account"],
      "required": true,
      "default": "General"
    },
    "order": {
      "type": "integer",
      "required": true,
      "min": 1,
      "default": 1
    }
  }
}
