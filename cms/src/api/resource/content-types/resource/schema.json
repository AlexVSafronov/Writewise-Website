{
  "kind": "collectionType",
  "collectionName": "resources",
  "info": {
    "singularName": "resource",
    "pluralName": "resources",
    "displayName": "Resource",
    "description": "Learning resources for the WriteWise website"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 150
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true,
      "maxLength": 500
    },
    "category": {
      "type": "enumeration",
      "enum": ["Guides", "Tools", "Articles", "Videos"],
      "required": true
    },
    "link": {
      "type": "string",
      "required": true,
      "maxLength": 500
    },
    "icon": {
      "type": "string",
      "maxLength": 50
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "fullDescription": {
      "type": "richtext"
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "duration": {
      "type": "string",
      "maxLength": 20
    },
    "videoUrl": {
      "type": "string",
      "maxLength": 500
    },
    "views": {
      "type": "string",
      "maxLength": 20
    },
    "likes": {
      "type": "string",
      "maxLength": 20
    },
    "chapters": {
      "type": "json"
    },
    "pages": {
      "type": "integer"
    },
    "format": {
      "type": "string",
      "maxLength": 20
    },
    "readTime": {
      "type": "string",
      "maxLength": 20
    },
    "lastUpdated": {
      "type": "string",
      "maxLength": 50
    },
    "tableOfContents": {
      "type": "json"
    }
  }
}
